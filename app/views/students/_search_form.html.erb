<%= search_form_for(@q, url: search_path) do |f| %>
  <table>
    <tr>
      <th>名前</th>
      <td><%= f.search_field :name_cont %></td>
    </tr>
    <tr>
      <th>学部</th>
      <td>
        <%= f.collection_select :department_id_eq, Department.all, :id, :name, include_blank: "指定なし" %>
      </td>
    </tr>
    <tr>
      <th>性別</th>
      <td>
        <%= f.radio_button :sex_eq, nil, checked: true %>
        <%= f.label :sex, '指定なし' %>
      </td>
      <td>
        <%= f.radio_button :sex_eq, true %>
        <%= f.label :sex, '男' %>
      </td>
      <td>
        <%= f.radio_button :sex_eq, false %>
        <%= f.label :sex, '女' %>
      </td>
    </tr>
    <tr>
      <th>年齢</th>
      <td>
        <%= f.radio_button :age_gteq, 0, checked: true %>
        <%= f.label :age, '指定なし' %>
      </td>
      <td>
        <%= f.radio_button :age_gteq, 15 %>
        <%= f.label :age, '15歳以上' %>
      </td>
      <td>
        <%= f.radio_button :age_gteq, 20 %>
        <%= f.label :age, '20歳以上' %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit "検索する" %>
      </td>
    </tr>
  </table>
<% end %>